@model IEnumerable<TaskTech.Models.Invoice>
@{
    ViewData["Title"] = "Index";
}

<div class="container">
    <div class="row pt-4">
        <div class="col-6 mt-2">
            <h2 class="text-primary">Invoices</h2>
        </div>
        <div class="col-6 text-right mt-2">
            <a asp-controller="Invoice" asp-action="Create" class="btn btn-primary">Create new Invoice</a>
        </div>

    </div>
    <br />
    @if (Model.Count() > 0)
    {
        foreach (var invoice in Model)
        {
            <div class="card text-center mt-3 my-2 mx-2">
                <div class="card-header">
                    Digital Life
                </div>
                <div class="card-body">
                    <h5 class="card-title">@invoice.InvoiceName</h5>
                    <p class="card-text">@invoice.InvoiceTitle</p>
                    <a asp-controller="Invoice" asp-action="LookOver" asp-route-Id="@invoice.Id" class="btn btn-primary">Look Over</a>
                    <a asp-controller="Invoice" asp-action="Update" asp-route-Id="@invoice.Id" class="btn btn-success">Update</a>
                    <a asp-controller="Invoice" asp-action="Delete" asp-route-Id="@invoice.Id" class="btn btn-danger">Delete</a>
                </div>
                @*<div class="card-footer text-muted">
                        2 days ago
                    </div>*@
            </div>
        }
    }
    else
    {
        <h1 class="text-danger text-center">No Invoice created yet!!!</h1>
    }

</div>

